<h1>Update Pet</h1>
<h2>Edits for <%= @owner.name %></h2>

  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet_name" value="<%= @pet.name %>">

    <br>
    <p>Select an existing owner or create a new one below.</p>


    <h3>Existing Owner</h3>
    <% @owners.each do |owner| %>
      <p><input type="radio" name="owner_id" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></p>
    <% end %>
    <br>

    <h3>New owner</h3>
    <label>Pet Name: </label>
    <br>
    <input type="text" name="owner_name" id="owner_name">
    <br><br>

    <input type="submit" value="Update Pet">
  </form>


